{% extends 'base.html.twig' %}
{% block title %}{{ actor.name }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1>{{ actor.name }}</h1>
            <h2 class="mt-0">Séries dans lesquelles il apparaît:</h2>
            <ul>
                {% for program in actor.programs %}
                <li>
                    {{ program.title }}
                </li>
                {% else %}
                    <li>Aucune série pour cet acteur</li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <a href="{{ path('wild_all_actor') }}" class="btn btn-primary">
        Retour aux acteurs
    </a>
{% endblock %}