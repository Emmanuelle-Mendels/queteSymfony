{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <div class="media-body">
            <h1>{{ program.title }}</h1>
            <h2 class="mt-0">Saison {{ season.number }}</h2>
        </div>
        <a href="{{ path('wild_season', {'id' : season.id}) }}" class="btn btn-primary">Retour aux épisodes</a>
        <p></p>
        <a href=" {{ path('show_program', {'slug' : program.slug }) }}" class="btn btn-primary ">voir toutes les saisons</a>
        <p></p>
        <a href="{{ path('wild_index') }}" class="btn btn-back">
            Retour à l'accueil
        </a>
    </div>
    <br>
    <div class="media">
        <div class="media-body">
            <h3 class="mt-0">Episode {{ episode.number }} </h3>
            <h4>{{ episode.title }}</h4>
            <p>{{ episode.synopsis }}</p>
        </div>

    </div>
    <div class="media text-primary justify-content-center">Avis sur l'épisode</div>
    <div class="media row">
{% for comment in comments %}
    <div class="col">
        <p>{{ comment.comment }}</p>
        <p><span class="text-danger">{{ comment.rate }} </span>/5,
    {{ comment.author.username }}</p>
    </div>
        {% endfor %}
    </div>
    <div>
        {% if is_granted('ROLE_SUBSCRIBER') %}

        {{ form_start(form) }}
    <div class="form-inline justify-content-center">
        {{ form_widget(form) }}</div>
    <div class="form-inline justify-content-center ">

        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
        {% endif %}
    </div>


{% endblock %}