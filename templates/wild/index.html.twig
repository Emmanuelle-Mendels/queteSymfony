{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries</h1>
    {{ form_start(form) }}
        {{ form_row(form.searchField) }}
        <button type="submit" class="btn btn-primary" name="btnSearch">Rechercher</button>
    {{ form_end(form) }}
    <div class="row justify-content-lg-around ">
    {% for program in programs %}
        <div class="card-deck mb-5">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{ asset('uploads/posters/'~program.poster )}}" alt="{{ program.title }} poster">
                <div class="card-body">
                    <h5 class="card-title">{{ loop.index }} / {{ program.title }}</h5>
                    <h6 class="card-title"> Catégorie : {{ program.category.name }}</h6>
                    <p class="card-text">{{ program.summary }}</p>
                    <a href="{{ path('wild_show', {'slug' : program.slug }) }}" class="btn btn-primary">En savoir plus</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-primary" href="{{ path('program_edit', {'slug': program.slug}) }}">édition</a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% else %}
        </div>
        Aucune série trouvée.
    {% endfor %}
{% endblock %}