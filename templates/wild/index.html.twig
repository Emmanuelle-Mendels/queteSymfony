{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries</h1>
    <div class="row justify-content-lg-around ">
    {% for program in programs %}
        <div class="card-deck mb-5">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{ program.poster }}" alt="{{ program.title }} poster">
                <div class="card-body">
                    <h5 class="card-title">{{ loop.index }} / {{ program.title }}</h5>
                    <h6 class="card-title"> Catégorie : {{ program.category.name }}</h6>
                    <p class="card-text">{{ program.summary }}</p>
                    <a href="{{ path('wild_show', {'id' : program.id }) }}" class="btn btn-primary">En savoir plus</a>
                </div>
            </div>
        </div>
    {% else %}
        </div>
        Aucune série trouvée.
    {% endfor %}
{% endblock %}