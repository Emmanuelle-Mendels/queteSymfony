{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    <div class="row">
    {% for program in programs %}
        <div class="card-deck mb-5">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{ program.poster }}" alt="{{ program.title }} poster">
                <div class="card-body">
                    <h5 class="card-title">{{ loop.index }} / {{ program.title }}</h5>
                    <h6 class="card-title"> Catégorie : {{ program.category.name }}</h6>
                    <p class="card-text">{{ program.summary }}</p>
                    <a href="" class="btn btn-primary">En savoir plus</a>
                </div>
            </div>
        </div>
    {% else %}
        </div>
        Aucune série trouvée.
    {% endfor %}
    <div>
        <a href="{{ path('wild_show', { 'slug': "walking-dead" }) }}">
            Testing show() method from WildController with a real program s slug.
        </a>
        <br>
        <a href="{{ path('wild_index') }}">
            Testing index() method from WildController to view all programs.
        </a>
        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </div>

{% endblock %}