{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <!--<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">-->
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <img class="card-img-top" src="{{ program.poster }}" alt="{{ program.title }} poster">
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
        </div>
    </div>
    <div class="media">
        <div class="media-body">
            {% for season in seasons %}
                <h2 class="mt-0">Saison {{ season.number }}</h2>
                <p>année {{ season.year }}</p>
                <p> {{ season.description }}</p>
                <a href="{{ path('wild_season', {id: season.id}) }}">Voir les épisodes
                </a>
                <p>
                <a href="{{ path('wild_show', {'slug' : program.title | lower | replace({' ':'-'})}) }}" >
                    Retour à la fiche série
                </a>
                </p>

            {%  endfor %}
        </div>
    </div>
    <a href="{{ path('wild_index') }}" class="btn btn-primary">
        Retour à l'accueil
    </a>

{% endblock %}