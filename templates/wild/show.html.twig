{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="img-fluid" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <a href=" {{ path('show_program', {'slug' : program.slug }) }} ">voir toutes les saisons</a>
        </div>

    </div>
    <div class="m-2">
     <strong>Acteur :</strong>

                        {% for actor in program.actors %}
                            <div>
                            <a href="{{ path('wild_actor', {'slug' : actor.slug }) }}">{{ actor.name }} </a>
                        {% else %}
                            <p>Aucun acteur pour cette série</p>
                            </div>
                        {% endfor %}
    </div>
    <a href="{{ path('wild_index') }}" class="btn btn-primary">
        Retour à l'accueil
    </a>

{% endblock %}