{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <div class="media-body">
            <h1>{{ program.title }}</h1>
            <h2 class="mt-0">Saison {{season.number}}</h2>
            <p>{{ season.year }}</p>
            <p>{{ season.description }}</p>
        </div>
    </div>
    <br>
    <div class="media">
        <div class="media-body">
            {% for episode in episodes %}

            <h3 class="mt-0">Episode {{ episode.number }} </h3>
                    <h4>{{ episode.title }}</h4>
                <p>{{ episode.synopsis }}</p>
                <a href="{{ path('wild_program', {'programTitle' : program.title | lower | replace({' ':'-'})}) }}">Retour aux saisons</a>
                <p></p>
            {%  endfor %}
        </div>
    </div>
