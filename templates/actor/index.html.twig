{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Actor index</h1>
    <a class="btn btn-primary" href="{{ path('actor_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr class="d-flex">
                <th class="col-1">Id</th>
                <th class="col-2">Name</th>
                <th class="col-2">Aper√ßu</th>
                <th class="col-2">Slug</th>
                <th class="col-2">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr class="d-flex">
                <td class="col-1">{{ actor.id }}</td>
                <td class="col-2">{{ actor.name }}</td>
                <td class="col-2"> <img class="w-25" src="{{ vich_uploader_asset(actor, 'imageFile')}}" alt="{{ actor.name }} image"></td>
                <td class="col-2">{{ actor.slug }}</td>
                <td class="col-2">
                    <a class="btn btn-primary" href="{{ path('actor_show', {'slug': actor.slug}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('actor_edit', {'slug': actor.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
