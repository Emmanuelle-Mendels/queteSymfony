{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Actor index</h1>
    <a class="btn btn-primary" href="{{ path('actor_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr class="d-flex">
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr class="d-flex">
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>{{ actor.slug }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('actor_show', {'slug': actor.slug}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('actor_edit', {'slug': actor.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
